<header>
  <nav class="navbar">
    <a href="/" class="logo">Sportify</a>

    <a class="active" href="/events/{{sport}}">Events</a>
    <a href="/myevents">MyEvents</a>
    <a href="/classes/{{sport}}">Classes</a>
    <a href="/venue/{{sport}}">Reserve Venue</a>

    <a href="/profile">Profile</a>
    <a href="/logout">Logout</a>

  </nav>
</header>

<h2>Latest Events For : {{sport}}</h2>
<div>
  <a href="/addevent/{{sport}}" class="addevent">Create New Event!</a>
</div>

{{#each events}}
  <div class="bgcard">
    <div class="info">
      <div class="bgimg" style="background-image: url({{this.image}})"></div>
      <ul class="info-list">
        <li class="author">Event By : {{this.username}}</li>
        <li class="date">Date : {{this.date}}</li>
        <li class="location">Location : {{this.sportPlace}}</li>
        <li class="time"> Time : {{this.startTime}} to {{this.endTime}}</li>
      </ul>
    </div>
    <div class="textDetails">
      <h1>{{this.name}}</h1>
      <p>{{this.description}}</p>
      {{#if this.registered}}
        <p style="color: green; ">
          Event Joined! ‚úÖ
        </p>
        <a href="/commentbox/{{this._id}}" style="color: rgb(139, 15, 241);">
          Chat With Participants! üí¨
        </a>
      {{/if}}
      <p class="joinLink">
        {{#if this.available}}
          {{#if this.registered}}
            <a
              style="color: rgb(241, 15, 15);"
              href="/events/{{sport}}/deregister/{{this._id}}"
            >
              Deregister Event? ‚ö†Ô∏è
            </a>
          {{else}}
            <a href="/events/{{sport}}/register/{{this._id}}">
              RSVP Event! [
              {{this.participants.length}}/{{this.capacity}}]
            </a>
          {{/if}}
        {{else}}
          {{#if this.registered}}
            <a
              style="color: rgb(241, 15, 15);"
              href="/events/{{sport}}/deregister/{{this._id}}"
            >
              Deregister Event? ‚ö†Ô∏è
            </a>
          {{else}}
            <a style="color: red;">Event Full! üò¢ [
              {{this.participants.length}}/{{this.capacity}}]
            </a>
          {{/if}}
        {{/if}}
      </p>
    </div>
  </div>
{{else}}
  <p>Sorry!<br /> No events found for {{sport}}.</p>
{{/each}}