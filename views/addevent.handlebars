<header>
  <nav class="navbar">
    <a href="/events/{{sport}}">Back</a>
  </nav>
</header>
<h2>Enter Event Details Below:</h2>

<div class="error" id="errors">{{errmsg}}</div>

<form action="/addevent/{{sport}}" method="post" id="addeventform">

  <label for="owner">Event by User:</label><br />
  <input type="text" id="owner" name="owner" value="{{userID}}" readonly />
  <br />

  <label for="eventname">Enter Event Name Here:</label><br />
  <input type="text" id="eventname" name="eventname" value="{{name}}" required />
  <br />

  <label for="desc">Enter Description Here:</label><br />
  <input type="text" id="desc" name="desc" value="{{description}}" required />
  <br />

  <label for="sportname">Preselected sports value: {{sport}}</label><br />
  <input type="text" id="sportname" name="sportname" value="{{sport}}" readonly />
  <br />

  <label for="sportPlace">Select Sports facility for Event : </label><br />
  <select id="sportPlace" name="sportPlace" required>
    <option value="" label="Select an option below" selected></option>
    {{#each places}}
    <option value="{{this.name}}">{{this.name}}</option>
    {{/each}}
  </select>
  <br />

  <label for="CapacityInput">Enter Event Capacity Here:</label><br />
  <input type="number" id="CapacityInput" name="CapacityInput" inputmode="numeric" min="1" value="{{capacity}}"
    required />
  <br />

  <label for="dateinput">Enter Date for Event:</label><br />
  <input type="date" id="dateinput" name="dateinput" value="{{date}}" required />
  <br />

  <label for="startTime">Enter a Start time:</label>
  <br />
  <input type="time" id="startTime" name="startTime" value="{{startTime}}" required />
  <br />

  <label for="endTime">Enter a End time:</label>
  <br />
  <input type="time" id="endTime" name="endTime" value="{{endTime}}" required />
  <br />

  <label for="thumbnail">Enter a Thumbnail URL here:</label>
  <br />
  <input type="url" id="thumbnail" name="thumbnail" value="{{image}}" required />
  <br />

  <input type="submit" value="Create Event" />
</form>