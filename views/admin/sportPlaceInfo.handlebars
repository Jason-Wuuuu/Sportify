<h1>{{name}}</h1>

<ul>
    <li>Sport: {{sport}}</li>
    <li>Address: {{address}}</li>
    <li>Description: {{description}}</li>
    <li>Capacity: {{capacity}}</li>
    <li>Price: {{price}}</li>
    <li>Rating: {{rating}}</li>
    <li>Number of Users: {{n}}</li>
</ul>

<label for="edit">Edit Class:</label>
<button type="button" id="edit">Edit</button>

<form action="/admin/sportPlaces/{{id}}" method="post" id="edit-form" {{hidden}}>
    <label for="nameInput">Name:</label>
    <input type="text" id="nameInput" name="nameInput" value="{{name}}" />
    <br>

    <label for="sportInput">Sport:</label>
    <select id="sportInput" , name="sportInput">
        <option selected>-</option>
        {{#each sports}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <br>

    <label for="addressInput">Address:</label>
    <input type="text" id="addressInput" name="addressInput" value="{{address}}" />
    <br>

    <label for="descriptionInput">Description:</label>
    <textarea type=id="descriptionInput" name="descriptionInput" value="{{description}}"></textarea>
    <br>

    <label for="capacityInput">Capacity:</label>
    <input type="number" id="capacityInput" name="capacityInput" value="{{capacity}}" />
    <br>

    <label for="priceInput">Price:</label>
    <input type="number" id="priceInput" name="priceInput" value="{{price}}" />
    <br>

    <input type="submit" value="Save" />

</form>

<div id="error" class="error" {{hidden}}>{{error}}</div>

<h3>List of Users:</h3>
<dl>
    <div id="userList">
        {{#if n}}
        {{#each users}}
        <dt>ID: {{userID}}</dt>
        <dd>Name: {{userFirstName}}, {{userLastName}}</dd>
        {{/each}}
        {{else}}
        <p>There are no users for this sport place...</p>
        {{/if}}
    </div>
</dl>

<a href="/admin/sportPlaces">Back</a>