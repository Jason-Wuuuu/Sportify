<header>
    <nav class="navbar">
        <a href="/admin/sportPlaces">Back</a>
    </nav>
</header>

<h1>{{name}}</h1>

<ul>
    <li>Sport: {{sport}}</li>
    <li>Address: {{address}}</li>
    <li>Description: {{description}}</li>
    <li>Capacity: {{capacity}}</li>
    <li>Price: {{price}}</li>
    <li>Rating: {{rating}}</li>
    <li>Number of Users: {{n}}</li>
</ul>

<label for="edit">Edit Class:</label>
<button type="button" id="edit">Edit</button>

<div id="error" class="error" {{hidden}}>{{error}}</div>
<div id="form" class="form" {{hidden}}>
    <form action="/admin/sportPlaces/{{id}}" method="post" id="edit-form">
        <label for="nameInput">Name:</label><br>
        <input type="text" id="nameInput" name="nameInput" value="{{newName}}" />
        <br>

        <label for="sportInput">Sport:</label><br>
        <select id="sportInput" , name="sportInput">
            {{#if newSport}}
            <option value="{{sport}}">{{sport}}</option>
            {{/if}}
            <option value="">-</option>
            {{#each sports}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
        <br>

        <label for="addressInput">Address:</label><br>
        <input type="text" id="addressInput" name="addressInput" value="{{newAddress}}" />
        <br>

        <label for="descriptionInput">Description:</label><br>
        <textarea type=id="descriptionInput" name="descriptionInput"
            value="{{newDescription}}">{{newDescription}}</textarea>
        <br>

        <label for="capacityInput">Capacity:</label><br>
        <input type="number" id="capacityInput" name="capacityInput" value="{{newCapacity}}" />
        <br>

        <label for="priceInput">Price:</label><br>
        <input type="number" id="priceInput" name="priceInput" value="{{newPrice}}" />
        <br>

        <input type="submit" value="Save" />

    </form>
</div>

<h3>List of Users:</h3>
<dl>
    <div id="userList">
        {{#if n}}
        {{#each users}}
        <dt>ID: {{userID}}</dt>
        <dd>Name: {{userFirstName}}, {{userLastName}}</dd>
        {{/each}}
        {{else}}
        <p>There are no users for this sport place...</p>
        {{/if}}
    </div>
</dl>