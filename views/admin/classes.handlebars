{{!--

login form handlebar template

--}}

<h1>{{title}}</h1>

<form action="/admin/classes" method="post" id="class-form">
    <label for="titleInput">Title:</label>
    <input type="text" id="titleInput" name="titleInput" value="{{classTitle}}" />
    <br>

    <label for="sportInput">Sport:</label>
    <select id="sportInput" , name="sportInput">
        <option selected>-</option>
        {{#each sports}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <br>

    <label for="sportPlaceInput">Sport Places:</label>
    <select id="sportPlaceInput" , name="sportPlaceInput">
        <option selected>-</option>
        {{#each sportPlaces}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <br>

    <label for="capacityInput">Capacity:</label>
    <input type="number" id="capacityInput" name="capacityInput" value="{{capacity}}" />
    <br>

    <label for="instructorInput">Instructor:</label>
    <input type="text" id="instructorInput" name="instructorInput" value="{{instructor}}" />
    <br>

    <label for="timeInput">Time:</label>
    <input type="datetime" id="timeInput" name="timeInput" value="{{time}}" />
    <br>

    <input type="submit" value="Submit" />
</form>

<div id="classList">
    <ul>
        {{#each classes}}
        <li><a href="/admin/classes/{{classID}}">{{className}}</a></li>
        {{/each}}
    </ul>
</div>

<a href="/admin/home">home</a>