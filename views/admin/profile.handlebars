<h1>{{title}}</h1>

<p>First Name: {{firstName}}</p>
<p>Last Name: {{lastName}}</p>
<p>Email: {{email}}</p>
<p>Gender: {{gender}}</p>
<p>Date Of Birth: {{dateOfBirth}}</p>
<p>Contact Number: {{contactNumber}}</p>

<form action="/admin/register" method="post" id="admin-edit-form" hidden>

    <label for="firstNameInput">First Name:</label>
    <input type="text" id="firstNameInput" name="firstNameInput" value="{{firstName}}" />
    <br>

    <label for="lastNameInput">Last Name:</label>
    <input type="text" id="lastNameInput" name="lastNameInput" value="{{lastName}}" />
    <br>

    <label for="emailInput">Email:</label>
    <input type="email" id="emailInput" name="emailInput" value="{{email}}" />
    <br>

    <label for="dateOfBirthInput">Date Of Birth:</label>
    <input type="date" id="dateOfBirthInput" name="dateOfBirthInput" value="{{dateOfBirth}}" />
    <br>

    <label for="contactNumberInput">Contact Number:</label>
    <input type="text" id="contactNumberInput" name="contactNumberInput" value="{{contactNumber}}" />
    <br>

    <label for="genderInput">Gender:</label>
    <select id="genderInput" name="genderInput">
        <option value="">--Please choose an option--</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="trans">Transgender</option>
        <option value="nonBi">Non-binary</option>
        <option value="none">Prefer not to respond</option>
    </select>
    <br>

    <label for="passwordInput">New Password:</label>
    <input type="password" id="passwordInput" name="passwordInput" />
    <br>

    <label for="confirmPasswordInput">Confirm Password:</label>
    <input type="password" id="confirmPasswordInput" name="confirmPasswordInput" />
    <br>

    <input type="submit" value="Submit" />
</form>

<button type="button" id="edit">Edit</button>
<a href="/admin/home">Back</a>