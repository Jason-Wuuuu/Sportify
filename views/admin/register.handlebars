<header>
    <nav class="navbar">
        <a href="/admin/login">Login</a>
        <a href="/">HomePage</a>
    </nav>
</header>

<h1>{{title}}</h1>

<div id="error" class="error" {{hidden}}>{{error}}</div>
<form action="/admin/register" method="post" id="admin-info-form">

    <label for="firstNameInput">First Name:</label><br>
    <input type="text" id="firstNameInput" name="firstNameInput" value="{{firstName}}" />
    <br>

    <label for="lastNameInput">Last Name:</label><br>
    <input type="text" id="lastNameInput" name="lastNameInput" value="{{lastName}}" />
    <br>

    <label for="emailInput">Email:</label><br>
    <input type="email" id="emailInput" name="emailInput" value="{{email}}" />
    <br>

    <label for="dateOfBirthInput">Date Of Birth:</label><br>
    <input type="date" id="dateOfBirthInput" name="dateOfBirthInput" value="{{dateOfBirth}}" />
    <br>

    <label for="contactNumberInput">Contact Number:</label><br>
    <input type="text" id="contactNumberInput" name="contactNumberInput" value="{{contactNumber}}" />
    <br>

    <label for="genderInput">Gender:</label><br>
    <select id="genderInput" name="genderInput">
        {{#if gender}}
        <option value="{{gender}}">{{gender}}</option>
        {{/if}}
        <option value="">-</option>
        {{#each genderOptions}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <br>

    <label for="passwordInput">Password:</label><br>
    <input type="password" id="passwordInput" name="passwordInput" value="{{password}}" />
    <br>

    <label for="password-hint" class="hint">Password Hint:</label><br>
    <ul id="password-hint">
        <li class="hint">Should be a minimum of 8 characters long</li>
        <li class="hint">Should contain at least one uppercase character</li>
        <li class="hint">Should contain at least one lowercase character</li>
        <li class="hint">Should contain at least one special character</li>
    </ul>

    <label for="confirmPasswordInput">Confirm Password:</label><br>
    <input type="password" id="confirmPasswordInput" name="confirmPasswordInput" />
    <br>

    <label for="inviteCodeInput">Invite Code:</label><br>
    <input type="password" id="inviteCodeInput" name="inviteCodeInput" value="admin" />
    <br>

    <input type="submit" value="Submit" />
</form>