<h1>{{name}}</h1>

<ul>
    <li>Sport: {{sport}}</li>
    <li>Sport Place: {{sportPlace}}</li>
    <li>Capacity: {{capacity}}</li>
    <li>Instructor: {{instructor}}</li>
    <li>Date: {{date}}</li>
    <li>Start Time: {{startTime}}</li>
    <li>End Time: {{endTime}}</li>
    <li>Rating: {{rating}}</li>
    <li>Number of Student: {{n}}</li>
</ul>

<label for="edit">Edit Class:</label>
<button type="button" id="edit">Edit</button>

<form action="/admin/classes/{{id}}" method="post" id="edit-form" {{hidden}}>
    <label for="titleInput">Title:</label>
    <input type="text" id="titleInput" name="titleInput" value="{{classTitle}}" />
    <br>

    <label for="sportInput">Sport:</label>
    <select id="sportInput" , name="sportInput">
        <option selected>-</option>
        {{#each sports}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <br>

    <label for="sportPlaceInput">Sport Places:</label>
    <select id="sportPlaceInput" , name="sportPlaceInput">
        <option selected>-</option>
        {{#each sportPlaces}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <br>

    <label for="capacityInput">Capacity:</label>
    <input type="number" id="capacityInput" name="capacityInput" value="{{capacity}}" />
    <br>

    <label for="instructorInput">Instructor:</label>
    <input type="text" id="instructorInput" name="instructorInput" value="{{instructor}}" />
    <br>

    <label for="dateInput">Date:</label>
    <input type="date" id="dateInput" name="dateInput" value="{{date}}" />
    <br>

    <label for="startTimeInput">Start Time:</label>
    <input type="time" id="startTimeInput" name="startTimeInput" value="{{startTime}}" />
    <br>

    <label for="endTimeInput">End Time:</label>
    <input type="time" id="endTimeInput" name="endTimeInput" value="{{endTime}}" />
    <br>

    <input type="submit" value="Save" />
</form>

<div id="error" class="error" {{hidden}}>{{error}}</div>

<h3>List of Student:</h3>
<dl>
    <div id="userList">
        {{#if n}}
        {{#each users}}
        <dt>ID: {{userID}}</dt>
        <dd>Name: {{userFirstName}}, {{userLastName}}</dd>
        {{/each}}
        {{else}}
        <p>There are no student for this class...</p>
        {{/if}}
    </div>
</dl>

<a href="/admin/classes">Back</a>