<header>
    <nav class="navbar">
        <a href="/admin/Events">Back</a>
    </nav>
</header>

<h1>{{name}}</h1>

<div>
    {{#if thumbnail}}
    <img class="thumbnail" src="{{thumbnail}}" alt="{{name}}">
    {{else}}
    <img class="thumbnail" src="/public/images/No_Image_Available.jpg" alt="{{name}}">
    {{/if}}
</div>

<ul>
    <li>UserID: {{userID}}</li>
    <li>Description: {{description}}</li>
    <li>Sport: {{sport}}</li>
    <li>Sport Place: {{sportPlace}}</li>
    <li>Capacity: {{capacity}}</li>
    <li>Date: {{date}}</li>
    <li>StartTime: {{startTime}}</li>
    <li>EndTime: {{endTime}}</li>
    <li>Number of Participants: {{n}}</li>
</ul>

<p>-----------------------------------------------------------------------</p>

<form action="/admin/events/remove/{{id}}" method="get">
    <label for="remove">Remove Event:</label>
    <button type="submit" id="remove">Remove</button>
</form>

<p>-----------------------------------------------------------------------</p>

<h2>List of Participants:</h2>
<div id="userList">
    {{#if n}}
    <ul>
        {{#each participants}}
        <li><a href="/admin/users/{{this.userId}}">{{this.userFirstName}} {{this.userLastName}}</a></li>
        {{/each}}
    </ul>
    {{else}}
    There are no participants for this event...
    {{/if}}
</div>