<header>
  <nav class="navbar">
    <a href="/">Home</a>

    <a href="/events/{{sport}}">Events</a>
    <a class="active" href="/classes/{{sport}}">Classes</a>
    <a href="/venue/{{sport}}">Reserve Venue</a>

    <a href="/logout">Logout</a>

  </nav>
</header>

<h1>Classes for : {{sport}}</h1>
{{#if message}}
<h2 style="color:rgb(226, 169, 12);"> {{message}} </h2>
{{/if}}

{{#each classList}}
<div class="bgcard">
  <div class="info">
    <div class="bgimg" style="background-image: url({{this.thumbnail}})"></div>
    <ul class="info-list">
      <li class="author">Instructor : {{this.instructor}}</li>
      <li class="date">Date : {{this.date}}</li>
      <li class="time"> Time : {{this.startTime}} to {{this.endTime}}</li>
    </ul>
  </div>
  <div class="textDetails">
    <h1>{{this.title}}</h1>
    {{#if rating}}
    <p>Rating: {{this.rating}}</p>
    {{else}}
    <p>Rating: No rating yet</p>
    {{/if}}
    <p>Price: {{this.price}}</p>
    <p> Capacity: {{this.capacity}}</p>
    <form action="/classes/{{../sport}}" method="post" id="{{this._id}}" class="add-user-in-class">
      <input name="classId" value="{{this._id}}" type="hidden" />
      <input type="submit" value="Add Me" />
    </form>
  </div>
</div>
{{else}}
<p>Sorry!<br /> No classes found for {{sport}}.</p>
{{/each}}